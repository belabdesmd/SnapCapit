{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "snapcap",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html",
        "height": "tall"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "endpoint": "/internal/menu/create-post/moderator",
        "forUserType": "moderator",
        "label": "Upload Image to Caption",
        "location": "subreddit"
      },
      {
        "endpoint": "/internal/menu/create-post/user",
        "forUserType": "user",
        "label": "Upload Image to Caption",
        "location": "post"
      }
    ]
  },
  "forms": {
    "createPostForm": "/internal/form/create-post"
  },
  "settings": {
    "global": {
      "API_KEY": {
        "type": "string",
        "label": "Backend API Key",
        "isSecret": true
      }
    }
  },
  "triggers": {
    "onPostDelete": "/internal/trigger/post-delete"
  },
  "scheduler": {
    "tasks": {
      "post-best-captions": {
        "endpoint": "/internal/job/post-best-captions"
      }
    }
  },
  "permissions": {
    "http": {
      "domains": ["snapcap.belfodil.me"],
      "enable": true
    },
    "media": true,
    "redis": true,
    "reddit": true
  },
  "media": {}
}
